{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "rootDir": "src/",
    "baseUrl": "src/",
    "jsx": "react",
    "paths": {
      "*": [
        "node_modules/*",
      ],
      "/bin/*": [
        "bin/*"
      ],
      "/etc/*": [
        "etc/*"
      ],
      "/lib/*": [
        "lib/*"
      ],
      "/opt/*": [
        "opt/*"
      ],
      "Bitburner": [
        "types/Bitburner.d.ts"
      ],
      "Bubba": [
        "types/Bubba.d.ts"
      ]
    },
    "outDir": "build/",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
  ]
}
